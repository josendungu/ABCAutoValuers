<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackGround"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".ClientDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="35dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="35dp" />


        <TextView
            android:id="@+id/text_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/car_state_details"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_tyres"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/multiline_edit_text_background"
            android:layout_height="wrap_content"
            android:ems="10"
            android:minLines="3"
            android:hint="@string/tyres"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/text_slogan"
            android:autofillHints="" />

        <EditText
            android:id="@+id/et_body_work"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="10dp"
            android:layout_marginTop="4dp"
            android:paddingEnd="10dp"
            android:background="@drawable/multiline_edit_text_background"
            android:layout_height="wrap_content"
            android:ems="10"
            android:minLines="3"
            android:hint="@string/body_work"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/et_tyres"
            android:autofillHints="" />

        <EditText
            android:id="@+id/et_mechanical"
            android:layout_width="0dp"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:layout_marginTop="4dp"
            android:paddingEnd="10dp"
            android:background="@drawable/multiline_edit_text_background"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:minLines="3"
            android:hint="@string/mechanical"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/et_body_work"
            android:autofillHints="" />

        <EditText
            android:id="@+id/et_electrical"
            android:layout_width="0dp"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingEnd="10dp"
            android:background="@drawable/multiline_edit_text_background"
            android:layout_height="wrap_content"
            android:ems="10"
            android:minLines="3"
            android:hint="@string/electrical"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/et_mechanical"
            android:autofillHints="" />

        <EditText
            android:id="@+id/et_airbags"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="10dp"
            android:layout_marginTop="4dp"
            android:inputType="number"
            android:background="@drawable/multiline_edit_text_background"
            android:hint="@string/number_of_airbags"
            app:layout_constraintTop_toBottomOf="@id/et_electrical"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:autofillHints="" />

        <EditText
            android:id="@+id/et_extras"
            android:layout_width="0dp"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingEnd="10dp"
            android:background="@drawable/multiline_edit_text_background"
            android:layout_height="wrap_content"
            android:ems="10"
            android:minLines="3"
            android:hint="@string/extras"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/lights_error"
            android:autofillHints="" />

        <TextView
            android:layout_width="0dp"
            android:id="@+id/et_anti_theft"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/anti_theft_devices"
            android:layout_height="50dp"
            android:background="@drawable/multiline_edit_text_background"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/et_airbags"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guideline" />

        <Spinner
            android:layout_width="0dp"
            android:id="@+id/et_lights"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/multiline_edit_text_background"
            android:layout_marginTop="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/et_anti_theft"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guideline" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lights_error"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="@color/design_default_color_error"
            android:padding="10dp"
            android:text="@string/error"
            app:layout_constraintTop_toBottomOf="@+id/et_lights"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guideline" />

        <EditText
            android:id="@+id/et_general_condition"
            android:layout_width="0dp"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingEnd="10dp"
            android:background="@drawable/multiline_edit_text_background"
            android:layout_height="wrap_content"
            android:ems="10"
            android:minLines="3"
            android:hint="@string/general_condition"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/et_extras"
            android:autofillHints="" />


        <Button
            android:id="@+id/buttonNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/next"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/et_general_condition" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>